<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hust.mapper.ClassesDao">
    <sql id="allColum">
        id,
        name,
        description
    </sql>
    <sql id="tableName">
        student
    </sql>


    <select id="queryByFileds" resultType="com.hust.bean.Classes">
        SELECT <include refid="allColum"/>
        FROM <include refid="tableName"/>
        WHERE name LIKE CONCAT('%', #{param1},'%')
        AND description LIKE CONCAT('%',#{param2},'%')
    </select>


    <select id="queryByFileds" resultType="com.hust.bean.Student">
        SELECT <include refid="allColum"/>
        FROM   <include refid="tableName"/>
        WHERE description LIKE CONCAT('%', #{stu.description},'%')
              LIMIT #{pageInfo.currentPage}, #{pageInfo.pageSize}
    </select>


</mapper>